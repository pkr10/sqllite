<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.example.sw_center_01.databaseproject.MainActivity">
    <EditText android:id="@+id/etdbname" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="데이터베이스 이름 입력"/>
    <Button android:onClick="onClick" android:text="DB 생성" android:id="@+id/btncreatedb" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:onClick="onClick" android:text="DB 삭제" android:id="@+id/btndeletedb" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:onClick="onClick" android:text="학생테이블생성" android:id="@+id/btncreateTable" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:onClick="onClick" android:text="학생데이터추가" android:id="@+id/btninsertdata" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:onClick="onClick" android:text="학생데이터조회" android:id="@+id/btnselectdata" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:background="#ff0" android:id="@+id/etData" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>